@using SimpleCrud.Entities
@using SimpleCrud.Models
@model IList<UserModel>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Imię i Nazwisko</th>
            <th>Wiek</th>
            <th>Rola</th>
            <th>Czy aktywny</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td><a href="@Url.Action("Edit", new { user.Id })">@user.FullName</a></td>
            <td>@user.Age</td>
            <td>@user.Role</td>
            <td>@user.IsActiveAsString</td>
            <td>@Html.ActionLink("Delete", "Delete", "Person", new { id = user.Id }, new { @class = "btn btn-danger" })</td>
        </tr>
        }
    </tbody>
</table>