@using SimpleCrud.Models.Roles
@model IEnumerable<RoleViewModel>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
            <td>@Html.ActionLink("Edit", "Edit", "Role", new { id = role.Id }, new { @class = "btn btn-warning" }) </td>
            <td>@Html.ActionLink("Delete", "Delete", "Role", new { id = role.Id }, new { @class = "btn btn-danger" }) </td>
        </tr>
        }
    </tbody>
</table>